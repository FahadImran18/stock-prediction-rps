[flake8]
# Exclude directories and files
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .dvc,
    data,
    models,
    mlruns,
    airflow/logs,
    airflow/__pycache__,
    features.pkl,
    *.pkl,
    *.joblib,
    *.parquet,
    *.csv,
    *.json,
    *.h5,
    *.pth,
    *.pt

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Ignore specific error codes
ignore = E203,E501,W503

# Select specific error codes for strict checking
select = E9,F63,F7,F82

# Per-file ignores (format: filename_pattern:error_codes)
per-file-ignores =
    __init__.py:F401
